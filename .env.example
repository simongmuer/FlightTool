# FlightTool Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/flighttool_db

# Session Configuration (generate a strong random string)
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters

# Authentication Configuration (for Replit Auth)
REPLIT_DOMAINS=yourdomain.com,www.yourdomain.com
REPL_ID=your-replit-app-id
ISSUER_URL=https://replit.com/oidc

# Application Configuration
NODE_ENV=production
PORT=3000

# Optional: Database Connection Pool Settings
PGHOST=localhost
PGPORT=5432
PGUSER=flighttool_user
PGPASSWORD=your_database_password
PGDATABASE=flighttool_db